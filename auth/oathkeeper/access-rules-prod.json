[
  {
    "id":"api:rest-api-docs",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.apps.svc.cluster.local:8000"
    },
    "match": {
      "url": "https://api.naytife.com/v1/docs",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    }, 
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },
  {
    "id":"api:rest-api-docs-all",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.apps.svc.cluster.local:8000"
    },
    "match": {
      "url": "https://api.naytife.com/v1/docs/<**>",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    }, 
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },
  {
    "id": "api:user-register",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.apps.svc.cluster.local:8000"
    },
    "match": {
      "url": "https://api.naytife.com/v1/auth/<{register}>",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },
  {
    "id": "api:cors",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.apps.svc.cluster.local:8000"
    },
    "match": {
      "url": "https://api.naytife.com/v1/<{shops}><**>",
      "methods": [
        "OPTIONS"
      ]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header"
      }
    ]
  },
  {
    "id": "api:admin-api",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.apps.svc.cluster.local:8000"
    },
    "match": {
      "url": "https://api.naytife.com/v1/<{shops}><**>",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH"      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "platform_admin",
            "offline"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User-Id": "{{ print .Subject }}"
          }
        }
      }
    ]
  },
  {
    "id": "api:public-graph-playground",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.apps.svc.cluster.local:8000"
    },
    "match": {
      "url": "http://<*>.naytife.com/api/graph",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },
  {
    "id": "api:public-graph-query",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.apps.svc.cluster.local:8000"
    },
    "match": {
      "url": "http://<*>.naytife.com/api/query",
      "methods": [
        "GET",
        "POST",
        "OPTIONS"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      },
      {
        "handler": "jwt",
        "config": {
          "scope": [
            "shop_customer",
            "offline"
          ],
          "target_audience": ["storefront"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      },
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-Customer-Id": "{{ print .Subject }}",
            "X-Shop-Id": "{{ print .Extra.context.shop_id }}"
          }
        }
      }
    ]
  },
