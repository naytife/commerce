  {
    "id": "api:public-graph-query",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.backend.svc.cluster.local:8080"
    },
    "match": {
      "url": "http://<*>.127.0.0.1:8080/query",
      "methods": [
        "GET",
        "POST",
        "OPTIONS"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      },
      {
        "handler": "jwt",
        "config": {
          "scope": [
            "shop_customer",
            "offline"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      },
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-Customer-Id": "{{ print .Subject }}",
            "X-Shop-Id": "{{ print .Extra.context.shop_id }}"
          }
        }
      }
    ]
  },
