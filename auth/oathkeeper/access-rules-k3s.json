[
  {
    "id":"api:rest-api-docs",
    "upstream": {
      "preserve_host": true,
      "url": "http://backend.backend.svc.cluster.local:8080"
    },
    "match": {
      "url": "http://127.0.0.1:8080/v1/docs",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    }, 
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },
  {
    "id":"api:rest-api-docs-all",
